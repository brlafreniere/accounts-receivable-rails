<%= form_with(model: line_item, local: true) do |form| %>
  <% if line_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(line_item.errors.count, "error") %> prohibited this line_item from being saved:</h2>

      <ul>
      <% line_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :invoice_id %>
    <%= form.collection_select :invoice_id, Invoice.all, :id, :id %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.collection_select :product_id, Product.all, :id, :name, :include_blank => true %>
  </div>

  <div class="field">
    <%= form.label :service_id %>
    <%= form.collection_select :service_id, Service.all, :id, :name, :include_blank => true %>
  </div>

  <div class="field">
    <%= form.label :price_override_cents %>
    <%= form.number_field :price_override_cents, id: :line_item_price_override_cents %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :line_item_quantity %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :line_item_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
