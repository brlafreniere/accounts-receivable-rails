<p id="notice"><%= notice %></p>

<h1 class="text-2xl mb-2">Line Items</h1>

<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-200">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invoice</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price override cents</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
        <th colspan="3" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
      </tr>
    </thead>

    <tbody>
      <% @line_items.each_with_index do |line_item, index| %>
        <%= tag.tr class: index.odd? ? "bg-white" : "bg-gray-50" do %>
          <td class="<%= td_css %>"><%= line_item.invoice.id %></td>
          <td class="<%= td_css %>"><%= line_item.product&.name %></td>
          <td class="<%= td_css %>"><%= line_item.service&.name %></td>
          <td class="<%= td_css %>"><%= line_item.price_override_cents %></td>
          <td class="<%= td_css %>"><%= line_item.quantity %></td>
          <td class="<%= td_css %>"><%= line_item.description %></td>
          <td class="<%= td_css %>"><%= link_to 'Show', line_item %></td>
          <td class="<%= td_css %>"><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
          <td class="<%= td_css %>"><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Line Item', new_line_item_path, role: "button", class: btn_css %>
