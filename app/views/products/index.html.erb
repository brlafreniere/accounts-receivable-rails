<p id="notice"><%= notice %></p>

<h1 class="text-2xl mb-2">Products</h1>

<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-200">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price cents</th>
        <th colspan="3" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each_with_index do |product, index| %>
        <%= tag.tr class: index.odd? ? "bg-white" : "bg-gray-50" do %>
          <td class="<%= td_css %>"><%= product.name %></td>
          <td class="<%= td_css %>"><%= product.price_cents %></td>
          <td class="<%= td_css %>"><%= link_to 'Show', product %></td>
          <td class="<%= td_css %>"><%= link_to 'Edit', edit_product_path(product) %></td>
          <td class="<%= td_css %>"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Product', new_product_path, role: "button", class: btn_css %>
