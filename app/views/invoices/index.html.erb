<p id="notice"><%= notice %></p>

<h1 class="text-2xl mb-2"> Invoices </h1>

<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-200">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Net days</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Note</th>
        <th colspan="3" ></th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each_with_index do |invoice, index| %>
        <%= tag.tr class: index.odd? ? "bg-white" : "bg-gray-50" do %>
          <td class="<%= td_css %>"><%= invoice.client.name %></td>
          <td class="<%= td_css %>"><%= invoice.net_days %></td>
          <td class="<%= td_css %>"><%= invoice.note %></td>
          <td class="<%= td_css %> underline"><%= link_to 'Show', invoice %></td>
          <td class="<%= td_css %> underline"><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
          <td class="<%= td_css %> underline"><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Invoice', new_invoice_path, role: "button", class: btn_css %>
